
@{
    Layout = null;
}

@model AdministracionWeb.Models.Empleados

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Agregar</title>
</head>
<body>
    <form method="post" enctype="multipart/form-data" asp-controller="Empleados" asp-action="Agregar">
        <table cellpadding="2" cellspacing="2">
            <tr>
                <td>Nombres</td>
                <td><input asp-for="nombres" /></td>
            </tr>

            <tr>
                <td>Apellidos</td>
                <td><input asp-for="apellidos" /></td>
            </tr>

            <tr>
                <td>Sexo</td>
                <td><input asp-for="id_sexo" /></td>
            </tr>

            <tr>
                <td>Estado Civil</td>
                <td><input asp-for="id_estadocivil" /></td>
            </tr>

            <tr>
                <td>Tipo de Sangre</td>
                <td><input asp-for="id_tiposangre" /></td>
            </tr>

            <tr>
                <td>Fecha de Nacimiento</td>
                <td><input asp-for="fecha_nacimiento" /></td>
            </tr>

            <tr>
                <td>Fecha de contrato</td>
                <td><input asp-for="fecha_contrato" /></td>
            </tr>

            <tr>
                <td>Url de Foto</td>
                <td><input asp-for="foto" /></td>
            </tr>

            <tr>
                <td>&nbsp;</td>
                <td><input type="submit" value="Guardar" /></td>
            </tr>


        </table>

    </form>
</body>
</html>
